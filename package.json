{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "npx tsc -p .",
    "lint": " npx xo",
    "test": "npm run test:ci -- --watch",
    "rs": "node -r esbuild-register",
    "ro": "node -r esbuild-register src/index.ts",
    "test:ci": "npx tap --node-arg='--require=esbuild-register'",
    "dev": "nodemon --exitcrash -x node -r esbuild-register src/index.ts",
    "ci": "npm run build && npm run lint && npm run test:ci"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "chance": "1.1.8",
    "close-with-grace": "^1.1.0",
    "cors": "2.8.5",
    "debug": "4.3.4",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "express-winston": "4.2.0",
    "got": "12.0.4",
    "lodash": "4.17.21",
    "mongodb": "4.6.0",
    "pino": "^7.11.0",
    "pino-colada": "^2.2.2",
    "pino-http": "^7.0.0",
    "winston": "3.7.2",
    "zod": "3.17.0"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/cors": "2.8.12",
    "@types/debug": "4.1.7",
    "@types/express": "4.17.13",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.35",
    "@types/tap": "15.0.7",
    "esbuild": "0.14.39",
    "esbuild-register": "3.3.2",
    "eslint": "8.16.0",
    "nodemon": "2.0.16",
    "npm-check-updates": "13.0.3",
    "prettier": "2.6.2",
    "source-map-support": "0.5.21",
    "tap": "16.2.0",
    "typescript": "4.6.4",
    "webpack": "5.72.1",
    "xo": "0.49.0"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
