{
  "name": "node-starter",
  "version": "1.0.0",
  "description": "node starter project",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "npx tsc -p .",
    "lint": " npx xo",
    "test": "npm run test:ci -- --watch",
    "rs": "node -r esbuild-register",
    "ro": "node -r esbuild-register src/index.ts",
    "test:ci": "npx tap --node-arg='--require=esbuild-register'",
    "dev": "nodemon --exitcrash -x node -r esbuild-register src/index.ts",
    "ci": "npm run build && npm run lint && npm run test:ci"
  },
  "author": "Pervez Iqbal",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "4.5.0",
    "bufferutil": "4.0.7",
    "bullmq": "3.1.3",
    "chance": "1.1.9",
    "close-with-grace": "1.1.0",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "debug": "4.3.4",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "fastify": "4.9.2",
    "fastify-mongodb": "4.2.0",
    "fastify-plugin": "4.3.0",
    "got": "12.5.2",
    "lodash": "4.17.21",
    "make-promises-safe": "5.1.0",
    "mongodb": "4.11.0",
    "pino": "8.7.0",
    "pino-colada": "2.2.2",
    "pino-http": "8.2.1",
    "pump": "3.0.0",
    "simple-get": "4.0.1",
    "tiny-lru": "10.0.1",
    "utf-8-validate": "5.0.10",
    "ws": "8.10.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@types/chance": "1.1.3",
    "@types/cors": "2.8.12",
    "@types/debug": "4.1.7",
    "@types/express": "4.17.14",
    "@types/lodash": "4.14.188",
    "@types/node": "18.11.9",
    "@types/tap": "15.0.7",
    "esbuild": "0.15.13",
    "esbuild-register": "3.3.3",
    "eslint": "8.26.0",
    "fastify-cli": "5.5.1",
    "nodemon": "2.0.20",
    "npm-check-updates": "16.3.16",
    "prettier": "2.7.1",
    "prisma": "4.5.0",
    "source-map-support": "0.5.21",
    "tap": "16.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "xo": "0.52.4"
  },
  "xo": {
    "ignores": [
      "**/node_modules/**",
      "**/dist/**",
      "**/*.test.(ts|js)"
    ],
    "space": true,
    "semi": true,
    "arrowParens": "avoid",
    "rules": {
      "@typescript-eslint/semi": "off",
      "import/extensions": "off"
    }
  }
}
